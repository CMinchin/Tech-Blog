<div class="text-center">
  <div class="post">
    <div>
      <h2>
        <a href="/post/{{id}}">
          {{name}}
        </a>
        <p>Created by {{user.name}} on {{format_date date_created}}</p>
      </h2>
    </div>
    <div>
      <p>
        {{description}}
      </p>
    </div>
  </div>
  <div>
    <h3>Comment something:</h3>

    <form class="form new-comment-form">
      <div class="form-group">
        <textarea class="form-input" id="post-desc" name="post-desc"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>
  {{#each comments as |comment| }}
  <div class="post">
    <div data-id="{{comment.myComment}}">
      <h3>
        <span>
          {{comment.user.name}}
        </span>
        {{#if comment.myComment}}
        <div class="col-md-1">
          <button class="btn btn-sm btn-danger delete" data-id="{{comment.id}}">DELETE</button>
        </div>
        {{/if}}
        <p>Created on {{format_date comment.date_created}}</p>
      </h3>
    </div>
    <div>
      <p>
        {{comment.description}}
      </p>
    </div>
  </div>
  {{/each}}
</div>

<script src="../js/post.js"></script>